// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model WireRecord {
  id                       String   @id @default(uuid())
  machineName              String
  wireType                 String
  partyName                String
  productionAtInstallation Int
  productionAtRemoval      Int?
  wireLifeMT               Int?
  expectedLifeMT           Int?
  changeDate               String
  remark                   String?
  createdAt                DateTime @default(now())
  updatedAt                DateTime @updatedAt
}

model EquipmentRecord {
  id               String   @id @default(uuid())
  groupName        String
  equipmentName    String
  downtimeMinutes  Int
  totalProduction  Int
  changeDate       String
  productionImpact String   
  remark           String?
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
}

model Notification {
  id        String   @id @default(uuid())
  type      String   // 'INFO', 'SUCCESS', 'WARNING', 'ALERT'
  title     String
  message   String
  isRead    Boolean  @default(false)
  createdAt DateTime @default(now())
}
