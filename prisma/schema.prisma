// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model WireRecord {
  id                       String   @id @default(uuid())
  machineName              String
  wireType                 String
  partyName                String
  productionAtInstallation Int
  productionAtRemoval      Int?
  wireLifeMT               Int?
  expectedLifeMT           Int?
  changeDate               String
  remark                   String?
  createdAt                DateTime @default(now())
  updatedAt                DateTime @updatedAt
}

model EquipmentRecord {
  id               String   @id @default(uuid())
  groupName        String
  equipmentName    String
  downtimeMinutes  Int
  totalProduction  Int
  changeDate       String
  productionImpact String   
  remark           String?
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
}

model Notification {
  id        String   @id @default(uuid())
  type      String   // 'INFO', 'SUCCESS', 'WARNING', 'ALERT'
  title     String
  message   String
  isRead    Boolean  @default(false)
  createdAt DateTime @default(now())
}

model ProductionRecord {
  id        String   @id @default(uuid())
  date      String   // Using YYYY-MM-DD format to match existing records
  amount    Float    // Amount in tons
  remark    String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model DispatchRecord {
  id        String   @id @default(uuid())
  date      String   // Using YYYY-MM-DD format
  amount    Float    // Amount in tons
  remark    String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model MasterData {
  id        String   @id @default(uuid())
  category  String   // e.g., 'MACHINE_SECTION', 'EQUIPMENT_NAME', 'WIRE_TYPE', 'PARTY_NAME'
  value     String
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model SheetLink {
  id        String   @id @default(uuid())
  label     String
  url       String
  createdAt DateTime @default(now())
}
